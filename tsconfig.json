{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noImplicitOverride": true,
        "module": "NodeNext",
        "outDir": "dist",
        "lib": ["ES2022"]
    },
    "include": ["src/**/*"]
}